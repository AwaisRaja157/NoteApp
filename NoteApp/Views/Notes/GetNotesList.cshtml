@model List<NoteApp.Models.Note>

@{
    ViewBag.Title = "GetNotesList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper" style="min-height: 64px;">
    <div class="row">

        <section class="col-lg-12 connectedSortable ui-sortable">
            <div class="card">
                <br />
                <h2 style="margin-left:500px">Notes List</h2>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-striped table-bordered datatable" id="table">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var element in Model)
                                     {
                                        <tr>
                                            <td>@element.Title</td>
                                            <td>@element.Description</td>

                                            <td>
                                                <a href="@Url.Action("GetNotesList","Notes", new { ID = element.ID })"><i class="glyph-icon glyphicon-pencil">Edit</i></a>
                                                <a href="@Url.Action("DeleteNotes","Notes", new { ID = element.ID })"><i class="glyph-icon icon-trash text-danger">Delete</i></a>
                                            </td>
                                        </tr>
                                     }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="tab-content p-0">
                        <div class="chart tab-pane active" id="revenue-chart" style="position: relative; height: 300px;">
                            <div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
                            <canvas id="revenue-chart-canvas" height="300" style="height: 300px; display: block; width: 527px;" width="527" class="chartjs-render-monitor"></canvas>
                        </div>
                        <div class="chart tab-pane" id="sales-chart" style="position: relative; height: 300px;">
                            <canvas id="sales-chart-canvas" height="0" style="height: 0px; display: block; width: 0px;" class="chartjs-render-monitor" width="0"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

