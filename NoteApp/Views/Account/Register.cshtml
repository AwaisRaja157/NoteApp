@section scripts{
    <script>

        $('#MyForm').validate({
            rules: {
                Fullname: {
                    required: true,
                    minlength: 2,
                    maxlength: 20,
                    lettersonly: true
                },
                Email: {
                    required: true,
                    minlength: 6,
                    email: true
                },
                Password: {
                    required: true,
                    minlength: 6,
                    password: true
                },
                Retypepassword: {
                    required: true,
                    minlength: 6,
                    Retypepassword: true
                },

            },
            messages: {
                Fullname: {
                    required: "Enter the Full Name",
                    minlength: "Name should be more than 2 characters",
                    maxlength: "Name should be less than 20 characters",
                    lettersonly: "Name should contain only letters"
                },
                Email: {
                    required: "Enter the Email",
                    minlength: "Password should be more than 6 characters",
                    email: "Please enter a valid email address"
                },
                Password: {
                    required: "Enter your Password",
                    minlength: "Password should be more than 6 characters",
                    password: "Please enter a valid email address"
                },
                Retypepassword: {
                    required: "ReType your Password",
                    minlength: "Password should be more than 6 characters",
                    Retypepassword: "Please enter a valid email address"
                }

            }

        });


        $('#agreeTerms').click(function () {
            
            if ($(this).is(':checked')) {
                console.log("Checked");
                $('#SubmitBtn').attr('disabled', false);

            } else {
                $('#SubmitBtn').attr('disabled', true);
                console.log("Checked");
            }
        });


    </script>
}

